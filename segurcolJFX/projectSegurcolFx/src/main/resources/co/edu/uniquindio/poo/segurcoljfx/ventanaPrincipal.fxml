<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.segurcoljfx.viewController.VentanaPrincipalViewController"
            prefWidth="300.0" prefHeight="400.0">

    <VBox alignment="CENTER" spacing="20">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>

        <Label text="Bienvenido a Segurcol"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

        <Label text="Seleccione un mÃ³dulo:"
               style="-fx-font-size: 14px; -fx-text-fill: #555;"/>

        <!-- botones add colores-->
        <VBox spacing="15" alignment="CENTER">
            <Button fx:id="btnPersonal" text="Personal de Seguridad"
                    onAction="#abrirPersonal"
                    prefWidth="180"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>

            <Button fx:id="btnServicios" text="Servicios"
                    onAction="#abrirServicios"
                    prefWidth="180"
                    style="-fx-background-color: #f1c40f; -fx-text-fill: white;"/>

            <Button fx:id="btnEquipos" text="Equipos"
                    onAction="#abrirEquipos"
                    prefWidth="180"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>

            <Button fx:id="btnAgenda" text="Agenda y Novedades"
                    onAction="#abrirAgenda"
                    prefWidth="180"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
        </VBox>
    </VBox>
</AnchorPane>
