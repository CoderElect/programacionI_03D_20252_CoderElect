<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.segurcoljfx.viewController.CustodiaFijaViewController"
            prefHeight="520.0" prefWidth="750.0">

    <children>
        <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

            <Label text="Gestión de Servicios: Custodia Fija" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="120" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <!-- Cod del contrato-->
                <Label text="Código Contrato:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCodigoContrato" promptText="Ej: C001" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- cliente -->
                <Label text="Cliente:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="txtCliente" promptText="Nombre del cliente" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <!-- tarifa mensual -->
                <Label text="Tarifa Mensual:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtTarifa" promptText="Ej: 2500000" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <!-- estado del servicio -->
                <Label text="Estado:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cmbEstado" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <!-- ouesto asignado -->
                <Label text="Puesto:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPuesto" promptText="Ej: Edificio Central" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <!-- botones add colores -->
            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="btnAgregar" text="Agregar" onAction="#onAgregar" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                <Button fx:id="btnActualizar" text="Actualizar" onAction="#onActualizar" style="-fx-background-color: #f1c40f; -fx-text-fill: white;"/>
                <Button fx:id="btnEliminar" text="Eliminar" onAction="#onEliminar" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                <Button fx:id="btnLimpiar" text="Limpiar" onAction="#onLimpiar" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            </HBox>

            <TableView fx:id="tblCustodiaFija" prefHeight="250">
                <columns>
                    <TableColumn fx:id="colCodigo" text="Código Contrato" prefWidth="120"/>
                    <TableColumn fx:id="colCliente" text="Cliente" prefWidth="160"/>
                    <TableColumn fx:id="colTarifa" text="Tarifa Mensual" prefWidth="120"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
                    <TableColumn fx:id="colPuesto" text="Puesto" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </children>
</AnchorPane>